{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "sourceMap": false,
    "strictPropertyInitialization": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "baseUrl": ".",
    "paths": {
      "src/": ["src/"],
      "src/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "__tests__/**",
    "src/modules/mail/**",
    "src/modules/external-feeds/**"
  ]
}